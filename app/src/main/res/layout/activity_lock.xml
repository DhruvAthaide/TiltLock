<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_cyber"
    tools:context=".ui.LockActivity">

    <!-- Header Status -->
    <TextView
        android:id="@+id/statusHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/status_locked"
        android:textColor="@color/error_red"
        android:fontFamily="monospace"
        android:letterSpacing="0.2"
        android:textSize="14sp"
        android:background="#10FF0033"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Vault Card with Parallax -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vaultCard"
        android:layout_width="320dp"
        android:layout_height="420dp"
        android:backgroundTint="#0B0B0B"
        app:cardCornerRadius="2dp"
        app:cardElevation="20dp"
        app:strokeColor="#30FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Decorative corners -->
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@color/neon_cyan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
             <View
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="#0B0B0B"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"/>

            <!-- Iris Visual -->
            <ImageView
                android:id="@+id/iris"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#151515"
                android:padding="30dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_lock_outline"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#40FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="monospace"
                android:text="@string/title_secure_vault"
                android:textColor="@color/neon_cyan"
                android:letterSpacing="0.3"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/iris"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="monospace"
                android:text="[ ENCRYPTED ]"
                android:textColor="#30FFFFFF"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/debugText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:fontFamily="monospace"
        android:text="@string/msg_authenticate"
        android:textColor="@color/neon_cyan"
        android:alpha="0.7"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
