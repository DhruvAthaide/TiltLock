<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_cyber"
    tools:context=".ui.GestureSetupActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="monospace"
        android:text="@string/title_calibration"
        android:textColor="@color/neon_cyan"
        android:textSize="20sp"
        android:letterSpacing="0.2"
        android:background="#1000F2FF"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        android:fontFamily="monospace"
        android:text="@string/instruction_setup"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:lineSpacingExtra="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Visualizer Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/visualizerCard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        android:backgroundTint="#050505"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp"
        app:strokeColor="#20FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRecord"
        app:layout_constraintTop_toBottomOf="@+id/instructions">

        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             
             <!-- Corner accents -->
             <View
                android:layout_width="16dp"
                android:layout_height="1dp"
                android:background="@color/neon_cyan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
             <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/neon_cyan"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

             <TextView
                 android:id="@+id/gestureSequence"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:padding="20dp"
                 android:fontFamily="monospace"
                 android:text="@string/msg_waiting"
                 android:textColor="@color/neon_cyan"
                 android:textSize="14sp"
                 android:letterSpacing="0.1"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRecord"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="32dp"
        android:text="@string/btn_record_start"
        android:textColor="@color/neon_cyan"
        android:background="@drawable/btn_neon_outline"
        android:fontFamily="monospace"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_neon_outline"
        android:text="@string/btn_save_gesture"
        android:textColor="@color/white"
        android:fontFamily="monospace"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toTopOf="@id/btnClear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/btn_clear_input"
        android:textColor="#80FF0033"
        android:fontFamily="monospace"
        android:textSize="12sp"
        android:letterSpacing="0.1"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
