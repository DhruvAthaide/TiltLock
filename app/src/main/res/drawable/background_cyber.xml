<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/charcoal"/>
        </shape>
    </item>
    
    <!-- Grid Lines (Simulated with simple stroke shape repeated or just a gradient) -->
    <!-- Creating a simple gradient fade for "Noir" feel -->
    <item>
        <shape>
            <gradient
                android:type="radial"
                android:gradientRadius="800dp"
                android:startColor="#0500F2FF"
                android:centerColor="#00000000"
                android:endColor="#00000000"
                android:centerX="0.5"
                android:centerY="0.5"/>
        </shape>
    </item>
    
    <!-- Top Accent Line -->
    <item android:top="0dp" android:height="2dp">
         <shape>
             <solid android:color="#3000F2FF"/>
         </shape>
    </item>
</layer-list>
