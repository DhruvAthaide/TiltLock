<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-feature android:name="android.hardware.sensor.gyroscope" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/tiltlock_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tiltlock_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TiltLock"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.LockActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.GestureSetupActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.GestureSetupActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.SecureFolderActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.SettingsActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.BreakInLogActivity" android:screenOrientation="portrait"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.dhruvathaide.tiltlock.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>